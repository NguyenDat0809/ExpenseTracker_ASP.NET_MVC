@model ExpenseTracker.Models.Transaction

@{
    ViewData["PageTitle"] = @Model.TransactionId == 0 ? "Create Transaction" : "Edit Transaction";
    ViewData["PageActionUrl"] = "/Transaction/Index";
    ViewData["PageActionText"] = "Transactions";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="TransactionId" value="@Model.TransactionId" />

                <div class="form-group">
                    <ejs-datepicker id="datepicker" format="MMM dd yyyy"
                    ejs-for="Date" placeholder="Date" floatLabelType="Always"
            
                    >
                </ejs-datepicker>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <ejs-dropdownlist id="categories" dataSource="@ViewBag.Categories" ejs-for="CategoryId"
                                      placeholder="Category" floatLabelType="Always"
                                      allowFiltering="true" filterType="Contains" popupHeight="220px">
                        <e-dropdownlist-fields value="CategoryId" text="IconWithTitle"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <ejs-numerictextbox id="amount" ejs-for="Amount" placeholder="Amount"
                                        min="0" format="c2" floatLabelType="Always"></ejs-numerictextbox>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <ejs-textbox id="icon" placeholder="Note" floatLabelType="Always" ejs-for="Note"></ejs-textbox>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
